generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_PUBLIC_SUPABASE_URL")
}

model User {
  email     String   @unique
  id        String   @id @default(uuid())
  name      String?
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime
  Buyer     Buyer[]
}

model Buyer {
  id           String       @id @default(uuid())
  email        String?      @unique
  fullName     String       @db.VarChar(80)
  phone        String       @unique @db.VarChar(15)
  city         BuyerCity
  propertyType PropertyType
  bhk          BHK?
  purpose      Purpose
  budgetMin    Int?
  budgetMax    Int?
  timeline     Timeline
  source       Source
  status       Status       @default(New)
  notes        String?      @db.VarChar(1000)
  tags         String[]     @default([])
  owner        User         @relation(fields: [ownerId], references: [id])
  ownerId      String
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

enum Role {
  USER
  ADMIN
}

enum BuyerCity {
  Chandigarh
  Mohali
  Zirakpur
  Panchkula
  Other
}

enum PropertyType {
  Apartment
  Villa
  Plot
  Office
  Retail
}

enum BHK {
  One    @map("1")
  Two    @map("2")
  Three  @map("3")
  Four   @map("4")
  Studio
}

enum Purpose {
  Buy
  Rent
}

enum Timeline {
  ZeroToThree @map("0-3m")
  ThreeToSix  @map("3-6m")
  OverSix     @map(">6m")
  Exploring
}

enum Source {
  Website
  Referral
  WalkIn   @map("Walk-in")
  Call
  Other
}

enum Status {
  New
  Qualified
  Contacted
  Visited
  Negotiation
  Converted
  Dropped
}
